<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <com.wandoujia.ads.sdk.volley.toolbox.NetworkImageView
            android:id="@+id/wdj_ad_interstitial_big_picture"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"/>

    <ImageButton
            android:id="@+id/wdj_big_interstitial_close_button"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_above="@id/wdj_ad_interstitial_big_picture"
            android:layout_alignRight="@id/wdj_ad_interstitial_big_picture"
            android:layout_marginBottom="-18dp"
            android:layout_marginRight="5dip"
            android:background="@drawable/wdj_ad_close_button_background"/>
</RelativeLayout>