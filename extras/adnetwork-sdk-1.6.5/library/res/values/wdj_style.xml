<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="detail_description">
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">13dip</item>
        <item name="android:lineSpacingExtra">3dip</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:paddingTop">12dp</item>
    </style>

    <style name="GenericProgressBackground" parent="android:Theme">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:background">#DD111111</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="GenericProgressIndicator" parent="@android:style/Widget.ProgressBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:indeterminate">true</item>
    </style>

    <style name="text_message_count">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:background">#f24949</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">13dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_message_count_tab" parent="text_message_count">
        <item name="android:layout_height">14dip</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:minWidth">14dip</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">10dip</item>
        <item name="android:textStyle">normal</item>
        <item name="android:paddingLeft">2dip</item>
        <item name="android:paddingRight">2dip</item>
    </style>
</resources>