<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            tools:context=".MainActivity"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="This is Ads-SDK sample."/>

        <Button
                android:id="@+id/show_apps_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Click me to show Ads Apps wall."/>

        <LinearLayout android:layout_width="300dip" android:layout_height="180dip">
            <FrameLayout
                    android:id="@+id/ads_widget_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
        </LinearLayout>

        <Button
                android:id="@+id/show_app_widget_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Click me to show Ads widget in Full-Screen mode."/>

        <FrameLayout
                android:id="@+id/banner_ad_container"
                android:layout_width="match_parent"
                android:layout_height="80dip"/>

        <Button
            android:id="@+id/show_app_wall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Click me to show App Wall"/>
    </LinearLayout>
</ScrollView>


