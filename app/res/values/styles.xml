<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppBaseTheme" parent="android:Theme.Light"></style>

    <style name="AppTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/ActionBarStyle</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_navigation_previous_item</item>
        <!-- 放在这里才有效 -->
        <item name="android:actionModeBackground">@color/blue_nav_bg_nomal</item>
        <item name="android:actionModeCloseDrawable">@drawable/ic_navigation_previous_item</item>
        <!--  -->
    </style>

    <style name="ActionBarStyle" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:displayOptions">showTitle</item>
        <!--default <item name="android:displayOptions">useLogo|showHome|showTitle</item> -->
        <item name="android:background">#FF3F9FE0</item>
    </style>

    <style name="MyActionModeStyle" parent="@android:style/Widget.Holo.Light.ActionMode"></style>

    <style name="Linerlayout"></style>

    <style name="Linerlayout.list_horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="Linerlayout.list_vertical" parent="Linerlayout.list_horizontal">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/main_item_height</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/btn_item_whit2grey</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="RelativeLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="RelativeLayout.item_main">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/main_item_height</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/btn_item_whit2grey</item>
    </style>

    <style name="ImageView">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
    </style>

    <style name="ImageView.item_main" parent="ImageView">
        <item name="android:layout_width">18dp</item>
        <item name="android:layout_height">18dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:tag">img</item>
    </style>

    <style name="TextView" />

    <style name="TextView.base">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">null</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginBottom">2dp</item>
    </style>

    <style name="TextView.newfeed" parent="TextView.base">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_marginTop">3dp</item>
    </style>

    <style name="TextView.item_main" parent="TextView.base">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">-10dp</item>
        <item name="android:tag">lang</item>
    </style>

    <style name="ListView"></style>

    <style name="ListView.default">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layoutAnimation">@anim/layout_listview_top_to_bottom_alpha</item>
    </style>

    <style name="Animations" />

    <style name="Animations.dialog">
        <item name="@android:windowEnterAnimation">@anim/zoom_in</item>
        <item name="@android:windowExitAnimation">@anim/zoom_out</item>
    </style>

    <style name="Dialog"></style>

    <style name="Dialog.Theme.BaseDialog" parent="@android:Theme.Dialog">
        <item name="android:windowBackground">@color/lucency_white</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@style/Animations.dialog</item>
    </style>

</resources>