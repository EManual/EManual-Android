<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    android:background="@drawable/ic_bg_dialog_white"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_title"
        style="@style/TextView.item_main"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="4dp"
        android:text="发现新版本"
        android:textSize="18sp"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@drawable/ic_line_1" />

    <TextView
        android:id="@+id/et_body"
        style="@style/TextView.item_main"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="6dp"
        android:gravity="top|left"
        android:minHeight="80dp"
        android:text="1.第一个版本release \n2.bug修复\n2.bug修复\n2.bug修复\n2.bug修复\n2.bug修复\n2.bug修复" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_cancle"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="4dp"
            android:layout_weight="1"
            android:background="@drawable/btn_common_red"
            android:text="下次更新"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btn_comfirm"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="4dp"
            android:layout_weight="1"
            android:background="@drawable/btn_common_green"
            android:text="立即更新"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>